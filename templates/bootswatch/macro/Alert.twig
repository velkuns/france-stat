{% macro error(message, title) %}
<div class="alert alert-danger alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <h4><i class="icon fa fa-ban"></i> {{ title|default('Error') }}</h4>
   {{ message }}
</div>
{% endmacro %}

{% macro success(message, title) %}
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h4><i class="icon fa fa-check"></i> {{ title|default('Success') }}</h4>
        {{ message }}
    </div>
{% endmacro %}
